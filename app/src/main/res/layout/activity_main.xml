<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_red_light">
        <ImageView
            android:src="@mipmap/dog"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="京东"
            android:textColor="@android:color/white"
            android:paddingTop="25dp"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text="手机号:                                                                                                                                                                     "
                android:textColor="#000"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="@dimen/dp280"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/tv1"
                android:layout_marginLeft="@dimen/dp10"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text="密码:                                                                                                                                                    "
                android:textColor="#000"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="@dimen/dp280"
                android:layout_height="@dimen/dp40"
                android:layout_below="@id/tv2"
                android:layout_marginLeft="@dimen/dp10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="11" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_below="@id/et2"
        android:layout_marginLeft="@dimen/dp35"
        android:layout_marginTop="@dimen/dp10"
        android:text="记住账号" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"
        android:id="@+id/forget"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/dp80"
        android:text="忘记密码?"
        android:textColor="#C1DCFC"
        android:textSize="@dimen/sp14" />
</LinearLayout>

<LinearLayout
    android:paddingLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:background="#A2CBFB"
        android:text="注册" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:background="#67C73C"
        android:text="登录" />
</LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textColor="@android:color/black"
            android:text="八维集团"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:text="copyright@2019-2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>